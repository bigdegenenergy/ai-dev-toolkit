{
  "permissions": {
    "allowed_commands": [
      "git status",
      "git diff",
      "git log",
      "git branch",
      "git add",
      "git commit",
      "git push",
      "git pull",
      "gh pr create",
      "gh pr list",
      "gh pr view",
      "npm test",
      "npm run",
      "pytest",
      "cargo test",
      "cargo build",
      "docker ps",
      "docker logs",
      "kubectl get",
      "kubectl describe",
      "ls",
      "cat",
      "grep",
      "find",
      "tree"
    ],
    "description": "Pre-approved safe commands that don't require permission prompts"
  },
  "hooks": {
    "post_tool_use": {
      "enabled": true,
      "script": ".claude/hooks/post-tool-use.sh",
      "description": "Automatically format code after edits"
    },
    "stop": {
      "enabled": true,
      "script": ".claude/hooks/stop.sh",
      "description": "Run quality checks at the end of each turn"
    }
  },
  "defaults": {
    "model": "claude-opus-4.5",
    "thinking_enabled": true,
    "plan_mode_default": true
  },
  "team": {
    "shared_docs": ".claude/docs.md",
    "metrics_dir": ".claude/metrics/",
    "update_frequency": "weekly"
  }
}
